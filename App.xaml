<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Team_Manager"
             x:Class="Team_Manager.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Button" x:Key="ButtonMargin">
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style>
            <Style TargetType="TabBar">
                <Setter Property="Shell.BackgroundColor" Value="#0a111c"></Setter>
                <Setter Property="Shell.UnselectedColor" Value="Yellow"></Setter>
                <Setter Property="Shell.TitleColor" Value="Green"></Setter>
                <Setter Property="Shell.ForegroundColor" Value="Red"></Setter>
                <!-- zmienić jakoś font size w tabbarze, bo jak się wchodzi na stronę główną to animacja powiększa czcionkę i się tekst wylewa, jeśli nie ma styli na dolnym tabbarze, a są tylko na górnym to trzeba w targetType dać wartość na shell, a potem znowu na TabBar -->

            </Style>
            


        </ResourceDictionary>
    </Application.Resources>
</Application>
