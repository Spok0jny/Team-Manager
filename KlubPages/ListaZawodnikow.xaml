<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Team_Manager.KlubPages.ListaZawodnikow"
             Title="ListaZawodnikow">
    <FlexLayout>
        <VerticalStackLayout>
            <Entry x:Name="imieEntry" Placeholder="ImiÄ™"></Entry>
            <Entry x:Name="nazwiskoEntry" Placeholder="Nazwisko"></Entry>
            <Button Text="Zapisz" x:Name="zapiszButton" Clicked="zapiszButton_Clicked"></Button>
            <ListView x:Name="listView" FlexLayout.Grow="1" HasUnevenRows="True" ItemTapped="listView_ItemTapped">
                      <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding Id}"></Label>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="{Binding Imie}"></Label>
                                    <Label Grid.Column="1" Text="{Binding Nazwisko}"></Label>
                                </Grid>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>