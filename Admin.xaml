<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Team_Manager.Admin"
             Title="Admin">
    <VerticalStackLayout>
        <Entry x:Name="TytulWydarzeniaEntry" Text="" Placeholder="TytuÅ‚ wydarzenia"></Entry>
        <Image x:Name="PhotoImage" WidthRequest="200" HeightRequest="200" Aspect="AspectFit" />
        <Button Text="Upload Photo"
                    Clicked="OnUploadPhotoClicked" />
        <Entry x:Name="AutorEntry" Text="" Placeholder="Autor"></Entry>
        <DatePicker x:Name="DataEntry"
                        Date="{Binding SelectedDate}"
                        Format="yyyy-MM-dd" />
        <Button Text="Dodaj wydarzenie" Clicked="OnAddEventClicked"></Button>
    </VerticalStackLayout>
</ContentPage>